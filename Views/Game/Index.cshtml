@model System.Collections.Generic.List<Retroly.Models.Game>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Games List </h2>
<div> </div>

<table class=“table table-bordered table-hover”>
    <thead>
        <tr>
            <th> ID </th>
            <th> Name </th>
         </tr>
    </thead>
    <tbody>
       @foreach (var game in Model)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
            </tr>
        }
        </tbody>
</table>