@model System.Collections.Generic.List<Retroly.Models.Game>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Games </h2>
<div> </div>

<table class=“table table-bordered table-hover”>
    <tr>
        <th> ID </th>
        <th> Name </th>
    </tr>
    @foreach (var game in Model )
    {
        <tr>
            <td>@game.Id</td>
            <td>@game.Name</td>
        </tr>
    }
    </table>