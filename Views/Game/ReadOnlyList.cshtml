@model System.Collections.Generic.List<Retroly.Models.Game>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Games List </h2>
<div> </div>
<h3> </h3>

<table id="games" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th> Game </th>
            <th> Genre </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            var table = $("#games").DataTable({
                ajax:
                {
                    url: "/api/games",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}